datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  slug          String    @unique
  title         String
  body          String
  author        User      @relation(fields: [authorId], references: [id])
  authorId      String    @db.ObjectId
  authorAddress String
  community     String
  comments      Comment[]
}

model Market {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  banner       String
  betEndTime   Int
  community    String?
  accessType   String?
  yesVotes     Int     @default(0)
  noVotes      Int     @default(0)
  participants User[]
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  address  String
  name     String?
  posts    Post[]
  Market   Market? @relation(fields: [marketId], references: [id])
  marketId String? @db.ObjectId
}

model Comment {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  comment String
  post    Post   @relation(fields: [postId], references: [id])
  postId  String @db.ObjectId
}
